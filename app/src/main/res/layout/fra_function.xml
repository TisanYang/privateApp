<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/text_sel" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_8_grey"
                    android:id="@+id/ll_TakePhoto"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="65dp">

                    <ImageView
                        android:src="@drawable/my_sel"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginLeft="12dp"
                        android:textSize="15sp"
                        android:id="@+id/btnTakePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加密拍照" />


                </LinearLayout>



                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_8_grey"
                    android:id="@+id/ll_TakeVideo"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="65dp">

                    <ImageView
                        android:src="@drawable/my_sel"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginLeft="12dp"
                        android:textSize="15sp"
                        android:id="@+id/btnTakeVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加密录像" />


                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:background="@drawable/shape_8_grey"
                    android:id="@+id/ll_btnRecordAudio"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="65dp">

                    <ImageView
                        android:src="@drawable/my_sel"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginLeft="12dp"
                        android:textSize="15sp"
                        android:id="@+id/btnRecordAudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加密录音" />


                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="20dp"
                android:max="100"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="最近"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
